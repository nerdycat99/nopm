<div class="booyah-box col-10 offset-1">
  <h1>create a new task</h1>
    <%= @project.name %>
      <%= simple_form_for @task, url: org_project_tasks_path(@project) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :status %>
    <br />
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    <% end %>

</div>

