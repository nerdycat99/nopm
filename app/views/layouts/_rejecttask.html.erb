<!-- Modal for rejecting a task -->
<div class="modal fade" id="rejecttask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close", id= 'btnCloseRejectTask'>
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="cnt-txt">
          <h3>reject task</h3><br />
        </div>

        <%= form_for @this_task, url: performer_org_project_task_path, remote: true do |f| %>
        <div class="row cnt-txt">
          <div class="col-10 offset-1">

            <h7>are you sure you want to reject this task?</h7><br /><br />

            <!-- Hidden Fields  -->
            <%= f.hidden_field :user_id, value: nil, autocomplete: "off" %>
            <%= f.hidden_field :status, value: "REJ", autocomplete: "off" %>
            <br />

          </div>
        </div>
        <div class="cnt-txt">
          <div class="actions">
            <%= f.submit 'yes', class: 'btn btn-success', id: 'btnRejectTaskYes' %>
            <%= link_to 'no', '#', class: 'btn btn-success', id: 'btnRejectTaskNo', remote: true %>
          </div>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>





<script type="text/javascript">

    btnCloseRejectTask = document.getElementById("btnCloseRejectTask");

    $("#btnRejectTaskNo").on('click', function(){
      // force dismiss the modal after user clicks no
      btnCloseRejectTask.click();
    });

    $("#btnRejectTaskYes").on('click', function(){
      // force dismiss the modal after user clicks yes
      btnCloseRejectTask.click();
    });




</script>